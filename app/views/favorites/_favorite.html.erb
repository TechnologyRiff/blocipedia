<% if policy(Favorite.new).create? %>
  <div class="favorite">
    <%# if favorite = favorited(@user.id, @wiki.id) %>
      <%= link_to favorite_path, class: 'btn btn-danger', method: :delete do %>
        <i class="glyphicon glyphicon-star-empty"> </i>nbsp; Unfavorite
      <% end %>
    <% else %>
      <%= link_to [Favorite.new], class: 'btn btn-primary', method: :post do %>
      <i class="glyphicon glyphicon-star"> </i>&nbsp; Favorite
      <% end %>
    <%# end %>
  </div>
<% end %>