<ol class="breadcrumb navbar-fixed-top" >
  <li><%= link_to "Home", :root %></li>
  <li><%= link_to "Wikis", wikis_path %></li>
  <li class="active">New</li>
</ol>
<div class="container">
  <div class="row">
    <h1>New Wiki</h1>
    
    <div class="col-md-6">
      <%= form_for @wiki do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Title of your Wiki' %>
        </div>

        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 14, class: "form-control" %>
        </div>

        <div class="form-group">
          <% unless current_user.standard? %>
            <%= f.label :private, class: 'checkbox' do %>
              <%= f.check_box :private %> Make Wiki private?
            <% end %>
          <% end %>
        </div>
         
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

    <div class="col-md-6 pull-right">
    <%= render partial:'wikis/form' %>
    </div>
  </div>
</div>

