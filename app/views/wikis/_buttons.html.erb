<div class="btn-group btn-group-xs" role="group" aria-label="modify wiki buttons">
  <% if @wiki && @wiki.private? %>
    <%= form_for @wiki do |f| %>
      <%= link_to auth_wiki_path(@wiki), method: :put, class: 'checkbox btn-xs btn-danger' do %>
        <span class="has-tooltip" data-toggle="tooltip" title="Make Wiki Public">
          <%= f.check_box :private %><small>Private</small>
        </span>
      <% end %>
    <% end %>
  <% elsif @wiki %>
    <%= form_for @wiki do |f| %>
      <%= link_to auth_wiki_path(@wiki), method: :put, class: 'checkbox btn-xs btn-primary' do %>
        <span class="has-tooltip" data-toggle="tooltip" title="Make Wiki Private">
          <%= f.check_box :private %><small>Public</small>
        </span>
      <% end %>
    <% end %>
  <% end %>
  
    <%= render partial: 'favorites/favorite', locals: { wiki: @wiki } %>
  
    <%= link_to edit_wiki_path(@wiki), class: 'btn btn-info btn-xs' do %>
      <span class="has-tooltip" data-toggle="tooltip" title="Edit Wiki">
        <span class="glyphicon glyphicon-edit">
        </span>
      </span>
    <% end %>
    <%= link_to new_collaboration_path(@wiki), class: 'btn btn-success btn-xs' do %>
      <span class="has-tooltip" data-toggle="tooltip" title="Add Collaborator">
        <span class="glyphicon glyphicon-user">
        </span>
      </span>
    <% end %>
    <%= link_to @wiki, data: { confirm: 'Are you sure you want to delete this topic?' }, method: :delete, class: 'btn btn-danger btn-xs' do %>
      <span class="has-tooltip" data-toggle="tooltip" title="Delete Wiki">
        <span class="glyphicon glyphicon-trash">
        </span>
      </span>
    <% end %>
    <%= link_to new_wiki_path, class: 'btn btn-success btn-xs' do %>
      <span class="has-tooltip" data-toggle="tooltip" title="New Wiki"><span class="glyphicon glyphicon-pencil"></span></span>
    <% end %>
</div>