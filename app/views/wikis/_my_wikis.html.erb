<h2>My Wikis</h2>
<% current_user.wikis.each do |wiki| %>
  <h4><%= link_to (markdown wiki.title), wiki %></h4>
  <small>
    submitted <%= time_ago_in_words(wiki.created_at) %> ago by
    <%= wiki.user.name %>
  </small>
  <p><%= truncate(wiki.body, length: 60, separator: '.') %></p>

  <%= form_for wiki do |f| %>
    <% if wiki.private? && current_user.not_standard? %>
        <p>Private Wiki</p>
        <div class="form-group">
            <%= f.label :private, class: 'checkbox' do %>
              <%= f.check_box :private %> <%= f.submit class: 'btn btn-inverse btn-sm' %>
              <i class="glyphicon glyphicon-refresh">&nbsp;</i>
            <% end %>
        </div>
    <% elsif wiki.public? && current_user.not_standard? %>
          <div class="form-group">
            <%= f.label :private, class: 'checkbox' do %>
              <%= f.check_box :private %> <%= f.submit class: 'btn btn-inverse btn-sm' %>
              <i class="glyphicon glyphicon-refresh">&nbsp;</i>
            <% end %>
          </div>
    <% elsif wiki.public? && current_user.standard? %>
        <p>Public Wiki</p>
    <% end %>
  <% end %>

  <% if policy(wiki).destroy? %>
    <%= link_to "Edit", edit_wiki_path(wiki.id), class: 'btn btn-success btn-sm' %>
    <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-warning btn-sm', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
  <% end %>
<% end %>