<h1><%= markdown @wiki.title %></h1>
<div class="row">
  <div class="col-md-8">
    <small>
      <%# image_tag(@wiki.user.avatar.tiny.url) if @wiki.user.avatar? %>
      submitted <%= time_ago_in_words(@wiki.created_at) %> ago by
      <%= @wiki.user.name %>
    </small>
  <p><%= markdown @wiki.body %></p>
  <p><%= @wiki.private? %></p>
      <%#= render partial: 'favorites/favorite', locals: { wiki: @wiki } %>
  </div>
  <div class="col-md-4">
    <% unless current_user.standard? %>
    <%= render partial: 'collaboration/form', locals: {wiki: @wiki } %>
      <div "form-group">
        <%= link_to "Invite", new_user_invitation_path %>
      </div>
    <% end %>
    <div "form-group">
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <% if policy(@wiki).destroy? %>
      <%= link_to "Delete Wiki", @wikis, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    
  </div>
</div>