<ol class="breadcrumb navbar-fixed-top" >
  <li><%= link_to "Home", :root %></li>
  <li><%= link_to "Wikis", wikis_path %></li>
  <li class="active"><%= "#{@wiki.title}" %></li>
  <li><%= link_to "Edit", edit_wiki_path(@wiki) %></li>
</ol>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= markdown @wiki.title %></h1>
    </div>
    <div class="col-md-4">
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <small>
        <%# image_tag(@wiki.user.avatar.tiny.url) if @wiki.user.avatar? %>
        submitted <%= time_ago_in_words(@wiki.created_at) %> ago by
        <%= @wiki.user.name %>
      </small>
      <p><%= markdown @wiki.body %></p>
      <%= form_for @wiki do |f| %>
        <% if @wiki.private? && current_user.not_standard? %>
            <p>Private Wiki</p>
            <div class="form-group">
              <%= f.label :private, class: 'checkbox' do %>
                <%= f.check_box :private %> Private
              <% end %>
            </div>
        <% elsif @wiki.public? && current_user.not_standard? %>
            <div class="form-group">
              <%= f.label :private, class: 'checkbox' do %>
              <%= f.check_box :private %> Make private?
              <% end %>
            </div>
        <% end %>
      <% end %>
      <%= render partial: 'favorites/favorite', locals: { wiki: @wiki } %>

      <div "form-group">
        <% if policy(@wiki).destroy? %>
          <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
          <%= link_to "Delete Wiki", @wikis, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Wiki?' } %>
        <% end %>
      </div>

      <% if current_user %>
        <% if @wiki && current_user.not_standard? && @wiki.private? %>
          <%= render partial: 'collaborations/form', locals: {wiki: @wiki } %>
          <h3>Current Collaborators</h3>
          <% if @collab %>
            <% @wiki.collaborations.each do |collab| %>
              <div><%= collab.user.name || collab.user.email %>
              </div>
            <% end %>
          <% else %>
            <h4>There are currently no collaborators.</h4>
            <%= link_to "Invite Collaborator", new_user_invitation_path, class: 'btn btn-primary btn-sm' %>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: 'btn btn-primary' %> <%= link_to "Return to Homepage", root_path, class: 'btn btn-default' %> <%= link_to "Create Account", new_user_registration_path, class: 'btn btn-success' %>  
      <% end %>
    </div>
  </div>

</div>




