<h2>My Favorite Wikis</h2>
<% if current_user.favorited_wikis.present? %>
    <% current_user.favorited_wikis.each do |wiki| %>
      <h4><%= link_to markdown wiki.title %></h4>
      <small>
        <%# image_tag(@wiki.user.avatar.tiny.url) if @wiki.user.avatar? %>
        submitted <%= time_ago_in_words(wiki.created_at) %> ago by
        <%= wiki.user.name %>
      </small>
      <p><%= truncate(wiki.body, length: 180, separator: '.') %></p>
      <%= link_to favorite_path(wiki_id: wiki.id, id: wiki.favorited(current_user).id), class: 'btn btn-danger', method: :delete do %>
        <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unfavorite
      <% end %>
    <% end %>
<% else %>
  <h2>You have not favorited any wikis</h2>
<% end %>
