<h2>My Favorite Wikis</h2>
  <% if policy(Favorite.new).create? && current_user.favorited? %>
      <% current_user.wikis.each do |wiki| %>
          <% if favorite = favorited(@user.id, @wiki.id) %>
        
              <h4><%= link_to markdown wiki.title, wiki %></h4>
                  <small>
                    <%# image_tag(@wiki.user.avatar.tiny.url) if @wiki.user.avatar? %>
                    submitted <%= time_ago_in_words(wiki.created_at) %> ago by
                    <%= wiki.user.name %>
                  </small>
              <p><%= truncate(wiki.body, length: 180, separator: '.') %></p>
                  <%= link_to favorite_path, class: 'btn btn-danger', method: :delete do %>
                  <i class="glyphicon glyphicon-star-empty"> </i>nbsp; Unfavorite
                  <% end %>
          <% end %>
      <% end %>

          <%= form_for wiki do |f| %>
              <% if wiki.private? && current_user.not_standard? %>
                  <p>Private Wiki</p>
                  <div class="form-group">
                      <%= f.label :private, class: 'checkbox' do %>
                      <%= f.check_box :private %> Private
                      <% end %>
                  </div>
              <% elsif wiki.public? && current_user.not_standard? %>
         
                  <div class="form-group">
                    <%= f.label :private, class: 'checkbox' do %>
                    <%= f.check_box :private %> Make private?
                    <% end %>
                  </div>
              <% end %>
          <% end %>

    <div class="form-group">
      <% if policy(wiki).update? %>
        <%= f.submit "Update", class: 'btn btn-success btn-sm' %>
      <% end %>
    </div>

    <div class="form-group">
      <% if policy(wiki).update? %>
        <%= link_to "Edit", edit_wiki_path(wiki.id), class: 'btn btn-success btn-sm' %>
      <% end %>

      <% if policy(wiki).destroy? %>
        <%= link_to "Delete", @wikis, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this topic?' } %>
      <% end %>
    </div>
<% end %>
<br />