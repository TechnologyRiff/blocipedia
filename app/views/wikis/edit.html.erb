<div class="row">
  <div class="col-md-8">
    <h1>Edit <%= @wiki.title %></h1>
    <% form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "New title for Wiki" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>



