<ol class="breadcrumb">
  <li><% link_to :root %>Home</a></li>
  <li><a href="../">Wikis</a></li>
  <li><a href="#"><%= @wiki.title %></a></li>
  <li class="active">Edit</li>
</ol>
<div class="container">
<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "New title for Wiki" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 14, class: "form-control" %>
      </div>
      <div class="form-group">
        <% unless current_user.standard? %>
          <%= f.label :private, class: 'checkbox' do %>
            <%= f.check_box :private %> Make Wiki private?
          <% end %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      
      </div>
    <% end %>
  </div>
</div>
</div>



