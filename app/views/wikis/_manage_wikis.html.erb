<h2>All Wikis</h2>
<% @wikis.each do |wiki| %>
  <h4><%= link_to wiki.title, wiki %></h4>
  <p><small>Created <%= time_ago_in_words(wiki.created_at) %> ago by
    <%= link_to "#{wiki.user.name}", wiki.user  %></small></p>
  <p><small><%= truncate(wiki.body, length: 180, separator: '.') %></small></p>
  <%= render partial: 'wikis/buttons', locals: { wiki: wiki } %>
  <hr />
<% end %>
