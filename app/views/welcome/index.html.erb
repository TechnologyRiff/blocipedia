<div class="container">
  <div class="jumbotron">
    <h1>Welcome to <strong>Collaborate!</strong></h1>
  </div>
  <% if current_user %>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
        </div>
        <div class="panel-body center-align">
          <h3><%= link_to "Browse Wikis", wikis_path %></h3>
          <h3>&nbsp;</h3>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
        </div>
        <div class="panel-body center-align">
          <h3><%= link_to "Browse Users", users_path %></h3>
          <h3>&nbsp;</h3>
        </div>
      </div>
    </div>    
  <% else %>
    <div class="row no-margin">
      <div class="col-md-8">
        <h2>Browse Public Wikis</h2>
        <% @public_wikis.each do |wiki| %>
          <h4><%= link_to wiki.title, wiki %></h4>
          <p><small><%= truncate(wiki.body, length: 140, separator: '.') %></small></p>
          <hr />
        <% end %>
      </div>
      <div class="col-md-4">
        <h2>To start adding information</h2>
        <p><button><%= link_to "Sign In", new_user_session_path %></button> 
        or <button><%= link_to "Sign Up", new_user_registration_path %></button></p>
      </div>
    </div>
  <% end %>
</div>
