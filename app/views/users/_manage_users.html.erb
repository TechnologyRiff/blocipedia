<% if current_user.admin? %>
  <h2>Manage Users: Change user's role?</h2>
      <% @persons.each do |person| %>
        <p><%= person.role.capitalize %>: 
           <%= person.name %>
        </p>

        <div class="form-group">
          <%#= form_tag('/role', method: :post) do %>
            <%= hidden_field_tag person.id %>

            <%= radio_button_tag(:role, "Admin") %>
            <%= label_tag(:role_admin, " Administrator") %>
            <%= radio_button_tag(:role, "Premium") %>
            <%= label_tag(:role_premium, " Premium     ") %>
            <%= radio_button_tag(:role, "Standard") %>
            <%= label_tag(:role_standard, " Standard") %>
          <%# end %>
          <%= select_tag :role %>
    <%= submit_tag "Update Role" %>
        </div>

      <% end %>
    <%#= search_field(:user, :name) %>
    <%#= form_tag users_path, method: :get do %>
        <%#= text_field_tag :search, params[:search] %>
        <%#= submit_tag "Search", :name => nil %>
    <%# end %>

              <%#= link_to "Downgrade Membership", user_downgrade_path(current_user), { data: { confirm: "Are you sure you want to become a standard user?" }, method: :post, class: "btn btn-default" } %>

<% else %>
  <h4>You do not have permission to manage users.</h4>
<% end %>
