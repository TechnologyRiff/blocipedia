<div class="row no-margin">
  <% if current_user.avatar? %>
      <h4>Current Avatar: <%= image_tag( current_user.avatar.profile.url ) %></h4>
  <% end %>
  <h4><%= "Name: #{current_user.name}" %></h4>
  <h4><%= "Email: #{current_user.email}" %></h4>
  <h4><%= "Membership Level: #{current_user.role.capitalize}" %></h4>
</div>
<button type="button" class="btn btn-info btn-min-width" data-toggle="modal" data-target="#myModal<%= current_user.id %>">
  <%= "#{current_user.name}'s Wikis" %>
</button>

<!-- Modal -->
<div class="modal fade" id="myModal<%= current_user.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= "#{current_user.name}'s Wikis" %></h4>
      </div>
      <div class="modal-body">
       <%= render partial: 'wikis/my_wikis', locals: { user: current_user } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
