<div class="container">
  <div class="row">
    <h1>My Profile</h1>
  </div>
    <% if @user.admin? %>
      <div class="row">
        <h2>Name: <%= @user.name %></h2>
        <h3>Welcome Administrator, what would you like to do today?</h3>
      </div>
      <% elsif @user.premium? %>
        <div class="row">
          <h2>Name: <%= @user.name %><br />
          Membership Level: Premium</h2>
          <h3>**Click here to downgrade your membership back to standard</h3>
        </div>
      <% else %>
        <div class="row">
          <div class="col-md-6">
          <h2>Name: <%= @user.name %> <br />
          <%= "Membership Level: #{current_user.role}" %></h2>
          </div>
          <div class="col-md-6">
            <h3>Would you like to upgrade to a premium membership?</h3>
              <p>** instructions</p>
        
                <form action="/charges" method="POST">
                  
                  <script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-key="<%= @stripe_btn_data[:key] %>" data-amount="<%= @stripe_btn_data[:amount] %>" data-description="<%= @stripe_btn_data[:description] %>" >
                  </script>
                </form>
          </div>
        </div>
    <% end %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
        <h2>**My Wikis</h2>
        <%= render partial: 'wikis/my_wikis', collection: @wikis %>
    </div>
    <div class="col-md-4">
        <h2>**Wikis I'm following</h2>
    </div>
    <div class="col-md-4">
        <h2>**Users I'm following</h2>
    </div>
  </div>
</div>