<div class="row no-margin">
  <h4><%= "Name: #{current_user.name}" %></h4>
  <h4><%= "Email: #{current_user.email}" %></h4>
  <h4><%= "Membership Level: #{current_user.role.capitalize}" %></h4>
  <% if current_user.avatar? %>
    <h4>Current Avatar: <%= image_tag( current_user.avatar.profile.url ) %></h4>
  <% end %>
</div>
